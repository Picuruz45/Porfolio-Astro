
---
    const { nombre, descripcion, linkPagina, img } = Astro.props
---

<div class=" max-w-4xl flex gap-3 h-44 border-2 border-gray-400 rounded py-3 px-4 bg-gray-50 bg-opacity-10">
    <img src={img} alt="" class="h-full">
    <div class="flex flex-col items-start gap-2">
        <a href={linkPagina} target="_blank" class="hover:text-blue-500 transition "><h2 class="font-semibold text-xl">{nombre}</h2></a>
        <p class="mb-3 text-gray-500 text-pretty">{descripcion}</p>
        <div class="flex justify-between w-full">
            <a href={linkPagina} target="_blank" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">Visitar Web<svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg></a>
            <a href="" target="_blank" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 border-[1px] border-gray-500 rounded-lg hover:text-white hover:border-white transition focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">Saber mas... <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg></a>
        </div>
    </div>
</div>